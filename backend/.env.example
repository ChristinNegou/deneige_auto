# =============================================================================
# DENEIGE AUTO - CONFIGURATION SERVEUR
# =============================================================================
# Copiez ce fichier vers .env et remplissez les valeurs
# IMPORTANT: Ne jamais committer le fichier .env !

# Configuration du serveur
PORT=3000
NODE_ENV=development

# =============================================================================
# BASE DE DONNEES
# =============================================================================
# MongoDB Local (developpement)
MONGODB_URI=mongodb://localhost:27017/deneige_auto

# MongoDB Atlas (production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/deneige_auto

# =============================================================================
# AUTHENTIFICATION
# =============================================================================
# Secret JWT (generer avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=votre_secret_jwt_super_long_et_securise
JWT_EXPIRE=7d

# =============================================================================
# CORS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:*,http://10.0.2.2:*,http://192.168.*.*

# =============================================================================
# EMAIL (Resend)
# =============================================================================
# Obtenir sur https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=Deneige Auto <noreply@deneige-auto.ca>

# URL du frontend
FRONTEND_URL=http://localhost:3000
APP_URL=http://localhost:3000

# =============================================================================
# STRIPE (Paiements)
# =============================================================================
# Obtenir sur https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_votre_cle_secrete
STRIPE_PUBLISHABLE_KEY=pk_test_votre_cle_publique

# =============================================================================
# TWILIO (SMS)
# =============================================================================
# Obtenir sur https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=votre_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# FIREBASE (Notifications Push)
# =============================================================================
# Option 1: Project ID seulement
FIREBASE_PROJECT_ID=votre-project-id

# Option 2: Service Account JSON complet (recommande)
# Telecharger depuis Firebase Console > Project Settings > Service Accounts
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"votre-project",...}

# =============================================================================
# ANTHROPIC (Claude AI - Assistant virtuel)
# =============================================================================
# Obtenir sur https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=sk-ant-api03-votre_cle_api
AI_CHAT_ENABLED=true
AI_CHAT_MODEL=claude-sonnet-4-20250514
AI_CHAT_MAX_TOKENS=1024

# Fonctionnalites IA avancees
AI_PHOTO_ANALYSIS_ENABLED=true
AI_DEMAND_PREDICTION_ENABLED=true
AI_SMART_MATCHING_ENABLED=true
AI_DISPUTE_ANALYSIS_ENABLED=true
AI_PRICING_ENABLED=true
