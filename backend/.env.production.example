# =============================================================================
# DENEIGE AUTO - CONFIGURATION PRODUCTION (Railway)
# =============================================================================
# Copiez ces variables dans Railway Dashboard > Variables
# =============================================================================

# Configuration
NODE_ENV=production

# =============================================================================
# BASE DE DONNEES (MongoDB Atlas)
# =============================================================================
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/deneige_auto

# =============================================================================
# AUTHENTIFICATION
# =============================================================================
# Generer avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=VOTRE_SECRET_64_CARACTERES_MINIMUM
JWT_EXPIRE=7d

# =============================================================================
# CORS - Domaines autorises
# =============================================================================
ALLOWED_ORIGINS=https://deneigeauto.com,https://www.deneigeauto.com
FRONTEND_URL=https://deneigeauto.com
APP_URL=https://deneigeauto.com

# =============================================================================
# STRIPE (Paiements) - CLES LIVE
# =============================================================================
STRIPE_SECRET_KEY=sk_live_VOTRE_CLE_SECRETE
STRIPE_PUBLISHABLE_KEY=pk_live_VOTRE_CLE_PUBLIQUE

# =============================================================================
# TWILIO (SMS)
# =============================================================================
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=VOTRE_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre_email@gmail.com
EMAIL_PASSWORD=VOTRE_APP_PASSWORD
EMAIL_FROM=Deneige Auto <noreply@deneigeauto.com>

# =============================================================================
# FIREBASE (Push Notifications)
# =============================================================================
FIREBASE_PROJECT_ID=votre-project-id
# Pour les notifications push, collez le JSON du service account sur une ligne:
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}
